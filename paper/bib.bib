@article{beckerDYNAMICALMEASUREMENTSINTERIOR2013,
	title = {{DYNAMICAL} {MEASUREMENTS} {OF} {THE} {INTERIOR} {STRUCTURE} {OF} {EXOPLANETS}},
	volume = {778},
	issn = {0004-637X, 1538-4357},
	url = {http://stacks.iop.org/0004-637X/778/i=2/a=100?key=crossref.dd5706e9fc1b527d50ed7e496078e44d},
