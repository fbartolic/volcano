	pages = {265--281},
	file = {de Pater et al. - 2017 - Three decades of Loki Patera observations.pdf:/Users/fb90/Zotero/storage/WVLVW7HJ/de Pater et al. - 2017 - Three decades of Loki Patera observations.pdf:application/pdf}
