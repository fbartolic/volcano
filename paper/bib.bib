	pages = {669--692},
	file = {Dominik - 2006 - Stochastic distributions of lens and source proper.pdf:/Users/fb90/Zotero/storage/3JMIFP6P/Dominik - 2006 - Stochastic distributions of lens and source proper.pdf:application/pdf;Dominik - 2006 - Stochastic distributions of lens and source proper.pdf:/Users/fb90/Zotero/storage/NJRTHUXJ/Dominik - 2006 - Stochastic distributions of lens and source proper.pdf:application/pdf;Dominik - 2006 - Stochastic distributions of lens and source proper.pdf:/Users/fb90/Zotero/storage/HXSIH3SH/Dominik - 2006 - Stochastic distributions of lens and source proper.pdf:application/pdf}
