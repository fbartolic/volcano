	file = {ScienceDirect Full Text PDF:/Users/fb90/Zotero/storage/5VJ6UD5G/Fletcher et al. - 2016 - Mid-infrared mapping of Jupiter’s temperatures, ae.pdf:application/pdf}
}

@article{adams2019,
